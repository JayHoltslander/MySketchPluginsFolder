// Scale Half (ctrl alt 5)

#import 'elegantchaos.js'

com.elegantchaos.execute(function() {
	var selected = doc.selectedLayers()[0];

	var midX = selected.frame().midX();
	var midY = selected.frame().midY();

	selected.multiplyBy(0.5);

	selected.frame().midX = midX
	selected.frame().midY = midY
});