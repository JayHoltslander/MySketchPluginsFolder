// Equalize Width Up
// Makes all selected objects the same width

var max_width = 0

for (var i=0; i < [selection count]; i++) {
  var layer = [selection objectAtIndex:i],
      frame = [layer frame],
      width = [frame width]

      max_width = Math.max(width, max_width)
}

for (var i=0; i < [selection count]; i++){
  var layer = [selection objectAtIndex:i],
      frame = [layer frame]
  [frame setWidth:Math.round(max_width)]
}